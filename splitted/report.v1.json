  "paths": {
    "/report/arts/{illustID}": {
      "parameters": [
        {
          "schema": {
            "type": "integer"
          },
          "name": "illustID",
          "in": "path",
          "required": true
        }
      ],
      "post": {
        "summary": "Report art",
        "tags": [
          "report"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostReportGeneralResponse"
                }
              }
            }
          }
        },
        "operationId": "reportArt",
        "description": "指定したイラストを運営に通報します\nむやみに利用するとアカウントが停止される可能性があります",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostReportGeneralRequest"
              }
            }
          }
        }
      }
    },
    "/report/tags/{tagID}": {
      "parameters": [
        {
          "schema": {
            "type": "integer"
          },
          "name": "tagID",
          "in": "path",

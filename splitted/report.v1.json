          }
        }
      }
    },
    "/report/wiki/{articleID}": {
      "parameters": [
        {
          "schema": {
            "type": "integer"
          },
          "name": "articleID",
          "in": "path",
          "required": true
        }
      ],
      "post": {
        "summary": "Report article",
        "tags": [
          "report"
